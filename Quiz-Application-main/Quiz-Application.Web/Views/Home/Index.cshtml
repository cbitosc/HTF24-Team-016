@model Quiz_Application.Services.Entities.Candidate
@{
    ViewData["Title"] = "Home Page";
}

@Html.HiddenFor(c => c.Candidate_ID)
<!DOCTYPE html>
<html>
<head>
    <title>Background Image Example</title>
    <style>
        body {
            background-image: url('https://c4.wallpaperflare.com/wallpaper/965/883/624/manga-one-piece-wallpaper-preview.jpg');
            background-size: cover; /* Makes image cover the entire background */
            background-position: center;
            background-repeat: no-repeat; /* Prevents the image from repeating */
        }
    </style>
</head>
</html>


<!-- Page Container -->
<div class="w3-container w3-content" style="max-width:1400px;margin-top:80px">
    <!-- The Grid -->
    <div class="w3-row">
        <!-- Left Column -->
        <div class="w3-col m3">
            <!-- Profile -->
            <div class="w3-card w3-round w3-blue">
                <div class="w3-container">
                    <h4 class="w3-center">My Profile</h4>
                    <p class="w3-center">
                        @if (@Model.ImgFile != null)
                        {
                          <img src="~/UploadedFiles/Image/@Model.ImgFile" class="w3-circle" style="height:106px;width:106px" alt="Avatar" id="imgProfile">
                        }
                        else
                        {
                            <img src="https://butwhytho.net/wp-content/uploads/2023/09/Gojo-Jujutsu-Kaisen-But-Why-Tho-2.jpg" class="w3-circle" style="height:106px;width:106px" alt="Avatar" id="imgProfile">
                        }
                    </p>
                    <hr>
                    <p><i class="fa fa-address-card fa-fw w3-margin-right w3-text-theme"></i><lable id="eqCandidateID">@Model.Candidate_ID</lable></p>
                    <p><i class="fa fa-user fa-fw w3-margin-right w3-text-theme"></i>@Model.Name</p>
                    <p><i class="fa fa-phone fa-fw w3-margin-right w3-text-theme"></i>@Model.Phone</p>
                    <p><i class="fa fa-paper-plane fa-fw w3-margin-right w3-text-theme"></i>@Model.Email</p>            
                </div>
            </div>
            <br />
            <!-- Alert Box -->
            <div class="w3-container w3-display-container w3-round w3-blue w3-border w3-theme-border w3-margin-bottom w3-hide-small">
                <span onclick="this.parentElement.style.display='none'" class="w3-button w3-theme-l3 w3-display-topright">
                    <i class="fa fa-remove"></i>
                </span>
                <p><strong>Please Note !</strong></p>
                <p style="color:yellow;">Preesing F5 at any time during the test will cause it to end immediately.</p>
            </div>
            <!-- End Left Column -->
        </div>

        <!-- Middle Column -->
        <div class="w3-col m7">
            <div class="w3-row-padding" id="pnlExam">
                <div class="w3-col m12">
                    <div class="w3-card w3-round ">
                        <div class="w3-container w3-padding">
                            <h6 style="color: white;class="w3-opacity">Select your anime & start the quiz. Good luck !</h6>
                            <select class="w3-select w3-border" id="ddlExam"></select>
                            <p><button type="button" id="btnStart" class="w3-button w3-blue"><i class="fa fa-pencil"></i>  Start</button></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="w3-container w3-card w3-round w3-white w3-margin" id="eqMain" ">
             

                <br>
                <span class="w3-right w3-opacity" id="eqCount"></span>
                <h3 style="color: black;">Your test will start once you press the Start button.</h3>

                <hr class="w3-clear">
                <h4 style="color:black;" id="eqQuestion"></h4>
                <p></p>               
                <button class="w3-button w3-block w3-blue" id="btnSave"><i class="fa fa-check"></i> Save</button>
                <hr class="w3-clear">
                <button id="btnPrev" type="button" class="w3-button w3-theme-d1 w3-margin-bottom w3-left"><i class="fa fa-angle-left"></i> Previous</button>
                <button id="btnNext" type="button" class="w3-button w3-theme-d1 w3-margin-bottom w3-right">Next <i class="fa fa-angle-right"></i></button>
            </div>
            <!-- End Middle Column -->
        </div>

        <!-- Right Column -->
        <div class="w3-col m2">
            <div class="w3-card w3-round w3-blue w3-center">
                <div class="w3-container">

            @* <p>The entire session will be recorded</p>                    *@
            @* <video id="gum" playsinline autoplay muted style="border: 1px solid rgb(15, 158, 238); height: 120px; width: 100%;"></video> *@
            @* <p><strong>Recording</strong></p> *@
                    <p id="timer"></p>
                    <p><button class="w3-button w3-block w3-theme-l4" id="btnSubmit">Submit</button></p>
                </div>
            </div>
            <br />
            
            <!-- End Right Column -->
        </div>
        <!-- End Grid -->
    </div>
    <!-- End Page Container -->
</div>
<br />